<div class="container">
        <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
              <div class="col-lg-6">
                <a href="#"  class="active" id="login-form-link">Login</a>
              </div>
              <div class="col-lg-6">
                <a href="#" id="register-form-link">Register</a>
              </div>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <div id="login-form" style="display: block;">
                    <%= form_for :session, url: sesion_login_path do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
                  </div>
                  <div class="form-group text-center">
                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                    <label for="remember"> Remember Me</label>
                  </div>
                  <div class="form-group text-center">
                    <div class="row justify-content-center">
                      <div class="col-lg-6">
                         <%= f.submit "Login", class: "form-control btn btn-login" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <a href="http://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
                <div id="register-form" style="display: none;">
                  <%= form_for (@new_user) do |f| %>
                  <div class="form-group">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
                  </div>
                  <div class="form-group">
                    <div class="row justify-content-center">
                      <div class="col-sm-6">
                        <%= f.submit "Register", class: "form-control btn btn-register" %>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>